@model List<CartItem>

<h2>Your Shopping Cart</h2>

@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.prodName</td>
                <td>@item.Quantity</td>
                <td>$@item.Price</td>
                <td>$@(item.Quantity * item.Price)</td>
            </tr>
        }
    </table>
    <p>Total: $@Model.Sum(i => i.Quantity * i.Price)</p>
}
else
{
    <p>Your cart is empty.</p>
}